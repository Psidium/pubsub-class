{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es5",
        "lib": [ "es5" ],
        "strict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "sourceMap": true,
        /* not activating importHelpers on porpose */
        // "importHelpers": true,
        // "noEmitHelpers": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "outDir": "./lib",
        "baseUrl": ".",
        "types": []
    },
    "include": [
        "src/*"
    ],
    "exclude": [
        "test/*",
        "node_modules",
        "lib"
    ]
}
